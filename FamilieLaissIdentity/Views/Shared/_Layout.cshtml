    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Dem Browser beibringen das er ein responsive Verhalten in Bezug auf die Screen-Width haben soll -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Zusatzinformationen über die Beschreibung der Website und den Autor -->
    <meta name="description" content="Homepage for Family Laiss">
    <meta name="author" content="Michael Laiss">

    <!-- Setzen des Site-Name -->
    <title>@ViewData["Title"] - @Localizer["SiteName"]</title>

    <!-- Setzen des Icons für die Website -->
    <link rel="icon" type="image/png" sizes="16x16" href="../assets/images/favicon.png">
