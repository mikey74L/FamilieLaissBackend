@using IdentityServer4.Extensions
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        var user = Context.User;
        name = user?.FindFirst("name")?.Value;
    }
}
<!DOCTYPE html>
<html>
<head>
    <!-- Wichtige HTML5 Meta-Informationen -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Setzen des Site-Name -->
    <title>@ViewData["Title"] - @Localizer["SiteName"]</title>

    <!-- Setzen des Icons für die Website -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- Stylesheet von Drittanbietern -->
    <link href="~/lib/material-design-iconic-font/dist/css/material-design-iconic-font.css" rel="stylesheet" />

    <!-- Stylesheets für die Applikation -->
    <link href="~/css/app_1.css" rel="stylesheet" />
    <link href="~/css/app_2.css" rel="stylesheet" />
</head>
<body>
    @RenderBody()

    <!-- JQuery muss immer als Script geladen werden -->
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <!-- Die Page spezifischen Scripte laden -->
    @RenderSection("scripts", required: false)
</body>
</html>
