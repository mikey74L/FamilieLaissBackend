@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model FamilieLaissIdentity.Models.Account.ResetPasswordViewModel;

<h2>@Localizer["View_Title"]</h2>

<form asp-controller="Account" asp-action="ResetPassword" method="post" class="form-horizontal">
    <h4>@Localizer["View_Description"]</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    @Html.HiddenFor(Model => Model.UserId)
    @Html.HiddenFor(Model => Model.Token)
    <div class="form-group">
        <label asp-for="NewPassword" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PasswordConfirmation" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="PasswordConfirmation" class="form-control" />
            <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">@Localizer["btn_Change_Password"]</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
